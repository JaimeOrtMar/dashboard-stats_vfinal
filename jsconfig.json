{
    "compilerOptions": {
        "checkJs": true,
        "strict": true,
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "noEmit": true,
        "skipLibCheck": true
    },
    "include": [
        "**/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}